        <TextField fx:id="billingAddressField" layoutX="226.0" layoutY="116.0" prefHeight="25.0" prefWidth="175.0" promptText="Enter billing address:" />
      <TextField fx:id="emailField" layoutX="226.0" layoutY="164.0" prefHeight="26.0" prefWidth="175.0" promptText="Enter Email:" />
    </children>

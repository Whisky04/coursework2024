    <children>
        <TextField fx:id="loginField" layoutX="26.0" layoutY="27.0" prefHeight="26.0" prefWidth="163.0" promptText="Enter login:" AnchorPane.leftAnchor="26.0" AnchorPane.rightAnchor="235.8" />
